unit UnitCadCliente;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TFormCadCliente = class(TForm)
    Label1: TLabel;
    edNome: TEdit;
    Label2: TLabel;
    edCnpj: TEdit;
    Button1: TButton;
    Button2: TButton;
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
    contador : integer;
  public
    { Public declarations }
    id : string;
  end;

var
  FormCadCliente: TFormCadCliente;


implementation

{$R *.dfm}

uses UnitDM, UnitCliente;

procedure TFormCadCliente.Button1Click(Sender: TObject);
begin
  if edNome.Text = '' then
  begin
    ShowMessage('O campo Nome Não Pode Ficar Vazios');
    exit;
  end;
  if edCnpj.Text = '' then
  begin
    ShowMessage('O Campo CNPJ Não Pode Ficar Vázio');
    exit;
  end;

  // VERIFICA SE CNPJ JA ESTA CADASTRADO
  if id = '' then
  begin
    with dm.qu do
    begin
      Close;
      sql.Text := 'SELECT cnpj FROM cliente where ' +
                  'cnpj = ' +edCnpj.Text;
      Open;
      if FieldByName('cnpj').AsString <> '' then
      begin
        ShowMessage('Este CNPJ possui Cadastrado!');
        Exit;
      end;
    end;
  end;
  //-------------------------------------

  with  dm.qu do
    begin
      Close;
      if id <> '' then
      begin
        SQL.Text := 'UPDATE cliente SET nome = ' +QuotedStr(edNome.Text)+ ' WHERE id = ' + id;
        SQL.Text := 'UPDATE cliente SET cnpj = ' +QuotedStr(edCnpj.Text)+ 'WHERE id = ' + id;


      end
      else
      begin
        sql.Text :=  'INSERT INTO cliente(cnpj, nome) VALUES ('+edCnpj.Text+','
        +QuotedStr(edNome.Text)+ ')';
      end;
      ExecSQL;
    end;
end;

procedure TFormCadCliente.Button2Click(Sender: TObject);
begin
  close;
end;

end.
